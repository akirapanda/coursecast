<%= simple_form_for(@chapter,:html=>{:class=>"form-horizontal"}) do |f| %>
<%= render "shared/error_messages",:target=>@chapter%>

 <fieldset>
	<legend>章节信息</legend>
</fieldset>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body,rows: 10, cols: 80 %>
  </div>
  <div class="field">
    <%= f.label :course_id %><br>
    <%= f.number_field :course_id %>
  </div>
  <div class="field">
    <%= f.label :video_url %><br>
    <%= f.text_field :video_url %>
  </div>
  <div class="field">
    <%= f.label :download_url %><br>
    <%= f.text_field :download_url %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.text_field :duration %>
  </div>
  <div class="field">
    <%= f.label :publish %><br>
    <%= f.check_box :publish %>
  </div>
  <div class="actions">
    
    	<%= f.submit "提交", :class => "btn btn-primary" %>
	 <%= link_to '返回', courses_path ,:class => "btn"%>

  </div>
<% end %>
