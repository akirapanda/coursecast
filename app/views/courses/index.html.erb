<h1>Listing courses</h1>

<%= button_to 'New Course', new_course_path,:class=>"btn btn-primary",:method=>"get" %>
<br>
<%= will_paginate @course%>

<% @courses.each_with_index do |course,i| %>
<%if i-1%3==1%>
<div class="row-fluid">
<% end %>
    <div class="span4">
		<h2><%= course.name %></h2>
		<p>简介：<%= course.description %></p>
		<p>内容：<%= course.content %></p>
		<p>作者：<%= course.author %></p>
		<%= link_to 'Show', course %>
		<%= link_to 'Edit', edit_course_path(course) %>
		<%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
<%if i-1%3==1%>	
</div>
<%end%>
<% end %>

