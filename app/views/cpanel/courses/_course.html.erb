<div class="course_item row-fluid">
	<div class="row-fluid">
		<div class="course_admin_action">
			<div class="btn-group">
		  <%= link_to '编辑', edit_course_path(course),:class=>'btn' %>
		  <%= link_to '删除', course,:class=>'btn btn-danger',method: :delete, data: { confirm: 'Are you sure?' } %>
			</div>
		</div>
		<div class="span2 fl">
			<%if course.cover?%>
			<%= image_tag course.cover,:class=>"course_icon"%>
			<%else%>
			<%= image_tag ('wrong.png')%>
			<%end%>
		</div>
		<div class="class_info fl">
			<h3><%= link_to course.name, course %></h3>
			<p class="p_intro">简介：<%= course.description %></p>
		</div>	
	</div>
	<div class="row-fluid">
		<div class="course_user_action">
			<span class="badge badge-info">
		共有<%=course.chapters.count%>课</span>
		</div>
	</div>
</div>