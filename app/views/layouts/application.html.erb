<!DOCTYPE html>
<html>
<head>
  <title>Lesson</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= yield :head%>
</head>
<body>
	<div class="container root_container">
		<div class="navbar navbar-fixed-top navbar-inverse">
			<div class="navbar-inner">
				<div class="container">
					<ul class="nav">
						<li><%= link_to("首页",root_path)%></li>
						<li><%= link_to("课程",courses_path)%></li>
						<!--<li><%= link_to("章节",chapters_path)%> -->
					</ul>
					<ul class="nav pull-right">
						<% if current_user %>
							<% if current_user.admin %>
							<li><%=link_to("管理" ,cpanel_root_path,:method=>:get)%></li>
							<%end%>
							<li><%=link_to("登出" ,destroy_user_session_path,:method=>:delete)%></li>
							<%else%>
							<li><%= link_to("登陆",new_user_session_path,:method=>:get)%></li>
							<%end%>
                		</ul>
					</div>
				</div>
			</div>
	
		<div class="container">
			<%if notice%>
			<div class="alert alert-info">
				<a class="close" data-dismiss='alert' href="#">x</a>
				<p id="notice"><%= notice %></p>
			</div>
			<%end%>
			<%= yield %>
		</div>
	</div>
		
		<footer class="footer">
				<ul>
					<li>About</li>
					<li>关注我们的微博</li>
				</ul>
		</footer>

</body>
</html>
